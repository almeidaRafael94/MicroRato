{
	//int sum_dir=0, sum_esq=0, sum_frente=0;

	//para garantir que funcionao
	disableObstSens();
	disableLineSens();
	enableLineSens();
	enableObstSens();
		
	readSensors(); 
	

	/*int i=0;
	for( i=0; i<9; i++){
		a_s_dir[i]=a_s_dir[i+1];
		a_s_esq[i]=a_s_esq[i+1];
